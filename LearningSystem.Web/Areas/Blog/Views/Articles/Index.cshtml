@model ArticleListingViewModel

@{
    ViewData["Title"] = "Articles";
}
<h1>@ViewData["Title"]</h1>
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}
<ul class="pagination">
    <li class="page-item @previousDisabled">
        <a class="page-link @previousDisabled" href="/parts/all?page=@Model.PreviousPage" aria-label="Previous">
            <span aria-hidden="true">❮</span>
            <span class="sr-only">Previous</span>
        </a>
    </li>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(Model.CurrentPage == i? "active" : string.Empty)"><a class="page-link" href="/parts/all?page=@i">@i</a></li>
    }
    <li class="page-item @nextDisabled">
        <a class="page-link @nextDisabled" href="/parts/all?page=@Model.NextPage" aria-label="Next">
            <span aria-hidden="true">❯</span>
            <span class="sr-only">Next</span>
        </a>
    </li>
</ul>

<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Content
            </th>
            <th>
                PublishDate
            </th>
            @*<th>
            </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>
                    @article.Title
                </td>
                <td>
                    @article.Content 
                </td>
                <td>
                    @article.PublishDate
                </td>
                
                @*<td>
                    <a class="btn btn-warning btn-sm" href="/parts/edit/@article.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/parts/delete/@article.Id">Delete</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>

