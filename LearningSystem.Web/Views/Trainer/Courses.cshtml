@model IEnumerable<CourseListingServiceModel>
@{
    ViewData["Title"] = "Trainer Courses";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <th>@course.Name</th>
                <th>@course.StartDate</th>
                <th>@course.EndDate</th>
                <th>
                    <a asp-action="Students" asp-route-id="@course.Id" class="btn btn-primary">Students</a>
                </th>
            </tr>
        }
    </tbody>
</table>