@model IEnumerable<CourseListingServiceModel>
@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron home-jumbotron">
    <h1>Welcome to our learning system!</h1>
</div>

<div class="row">
    @foreach(var course in Model)
    {
        <div class="col-md-4">
            <div class="panel panel-default" >
                <div class="panel-heading">
                    <h3>@course.Name</h3>
                </div>
                <div class="panel-body">
                    @*//TODO IMAGE*@
                  <p class="text-center">@course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()</p> 
                </div>
            </div>
        </div>

    }
</div>

